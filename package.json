{
  "name": "@buggy-connect/auth",
  "version": "0.0.1",
  "description": "Module to authentication BuggyConnect App",
  "main": "dist/app.js",
  "scripts": {
    "format": "prettier --write \"**/*.+(ts|js|jsx|json|yml|yaml|css|md|vue)\"",
    "upgrade-modules": "yarn upgrade --latest --pattern \"@buggy-connect/*\"",
    "build": "nest build",
    "start": "NODE_ENV=dev nest start",
    "start:dev": "NODE_ENV=dev nest start --watch",
    "start:debug": "NODE_ENV=dev nest start --debug --watch",
    "start:prod": "NODE_ENV=prod node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/currency-formatter": "^1.3.0",
    "@types/date-and-time": "^0.13.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "commitizen": "^4.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "jest": "^29.5.0",
    "lint-staged": "13.0.3",
    "nyc": "^15.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "mongoose": "^7.5.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "resolutions": {
    "**/colors": "1.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcelio911/buggy-connect-auth.git"
  },
  "keywords": [
    "npm",
    "node",
    "typescript",
    "users",
    "profile",
    "validation"
  ],
  "author": "Marcelio Santana",
  "bugs": {
    "url": "https://github.com/marcelio911/buggy-connect-auth/issues"
  },
  "homepage": "https://github.com/marcelio911/buggy-connect-auth#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
